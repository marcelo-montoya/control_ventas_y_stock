<p style="color: green"><%= notice %></p>

<h1>Productos</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Cantidad</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <th scope="row"> <%= product.id %> </th>
        <td> <%= product.nombre %> </td>
        <td> <%= product.precio %> </td>
        <td> <%= product.descripcion %> </td>
        <td> <%= product.cantidad %> </td>
        <td><%= link_to "Mostrar producto", product, class:"btn btn-outline-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="button">
  <%= link_to "New product", new_product_path, class:"btn btn-outline-secondary" %>

</div>

<%= will_paginate @products, renderer: WillPaginate::ActionView::BootstrapLinkRenderer%>


